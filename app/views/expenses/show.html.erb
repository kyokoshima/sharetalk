<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @expense.title %>
</p>

<% @expense.costs.each do |cost| %>
<p>
  <strong>Subject:</strong>
  <%= cost.subject %>

  <strong>Cost:</strong> ¥
  <%= cost.cost %>

	<strong>Detail:</strong>
  <%= cost.detail %>
</p>
<% end %>

<% @expense.users.each do |user| %>
	<%= user.email %>
<% end %>

<p>
<strong>代金合計</strong> ¥
<%= @expense.total_cost %>
</p>

<%= render 'costs/form', cost: @cost, expense: @expense %>

<%= link_to 'Edit', edit_expense_path(@expense) %> |
<%= link_to 'Back', expenses_path %>
