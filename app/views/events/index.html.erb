<p id="notice"><%= notice %></p>

<h2>イベント一覧</h2>

<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>イベント作成日</th>
      <th>場所</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.place %></td>
        <td><%= event.detail %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="waves-effect btn new_event"><%= link_to 'イベントを作成', new_event_path %></div>
